<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hhm.hibernate_06_guanLian_querystategy.Department" table="Department" lazy="true">
		<id name="did" >
			<generator class="increment"></generator>
		</id>		
		<property name="name" ></property>
		<property name="brief" ></property>
		
		<set name="employees" inverse="true" cascade="all">
            <key column="did"/>
            <one-to-many  class="com.hhm.hibernate_06_guanLian_querystategy.Employee"/>
        </set>
	</class>
</hibernate-mapping>